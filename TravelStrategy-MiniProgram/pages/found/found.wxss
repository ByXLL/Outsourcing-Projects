/* pages/found/found.wxss */
/* 隐藏小程序scroll-view的滚动条 */
::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}

.search{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin:0 auto;

    width: 550rpx;
    height: 56rpx;
    border-radius: 20rpx;
    color: #666666;
    background-color: #eeeeee;
    font-size: 28rpx;
}


.title{
    width: 190rpx;
    height: 32rpx;
    line-height: 32rpx;
}
.active{
    font-size: 36rpx;
}
.scroll-view_H{
    white-space: nowrap;
}
.scroll-view-item_H{
    height: 208rpx;
    display: inline-block;
    padding-right: 15rpx;
}
.scroll-view-img{
    width: 288rpx;
    height: 208rpx;
    border-radius: 10rpx;
}

.title-two{
    width: 160rpx;
    height: 32rpx;
    line-height: 32rpx;
}
.scroll-view-item_H-two{
    display: inline-block;
    text-align: center;
    margin-right: 15rpx;
    border:1rpx solid #B5B5B5;
    padding: 12rpx 20rpx 12rpx 20rpx;
    border-radius: 10rpx;
}
.two-active{
    background-color: #31CFBE;
    color: #000000;
    border:0rpx solid #B5B5B5;
}
.two-two-img{
    width: 218rpx;
    height: 144rpx;
    border-radius: 10rpx;
}

.china{
    width: 686rpx;
    height: 240rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
}
.left-img{
    width:300rpx;
    height:200rpx;
    border-radius:5px;
    margin-top: 20rpx;
}

.right-text{
    align-items: center;
    justify-content: center;
    display: block;
    align-content: center;
    padding: 30rpx 30rpx 30rpx 30rpx;
    
}
.right-text1{
    float: left;
    text-align: center;
    display:block ;
    width: 100%;
    color: blue;
    margin-bottom: 15px;
    font-size: 18px;
}
.right-text2{
    float: left;
    
    text-align: center;
    display:block ;
    width: 100%;
    margin-bottom: 10px;
    font-size: 14px;
}
.right-text3{
    float: left;
    text-align: left;
    display:block ;
    width: 100%;
    font-size: 12px;
}