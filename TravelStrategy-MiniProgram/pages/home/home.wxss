page{
    background-color: #eeeeee;
}
.swiper-warp{
    width: 100%;
    height: 420rpx;
}
.swiper-warp .swiper-img{
    width: 100%;
    height: 420rpx;
}
.search{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin:0 auto;
    width: 550rpx;
    height: 56rpx;
    border-radius: 20rpx;
    color: #666666;
    background-color: #ffffff;
    font-size: 24rpx;
    position: absolute;
    top: 50rpx;
    left: 50%;
    margin-left: -275rpx;
    z-index: 10000;
}
/* 动画 */
@keyframes animation-search{
    0%   {top: 180rpx; left: 20%;}
    25%  {top: 160rpx; left: 30%;}
    50%  {top: 140rpx; left: 40%;}
    100% {top: 100rpx; left: 50%;}
}
@-webkit-keyframes animation-search{
    0%   {top: 180rpx; left: 20%;}
    25%  {top: 160rpx; left: 30%;}
    50%  {top: 140rpx; left: 40%;}
    100% {top: 100rpx; left: 50%;}
}

.nav{
    width: 686rpx;
    height: 144rpx;
    background-color: #ffffff;
    border-radius: 20rpx;

    position: relative;  
    top: -72rpx;
    margin-bottom: -72rpx;  /* 设置一个margin负值删除自身最初在文档流中留下的空白 */
}
.nav-img{
    width: 60rpx;
    height: 60rpx;
    transition: all 1s;
}
.nav-img:hover{
    -moz-transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    transform: rotate(360deg);
    opacity: 0.8;
}
.animation-nav{
    border-radius: 50%;
    animation: animation-nav 5s;
    -webkit-animation: animation-nav 5s; /* Safari 与 Chrome */
}
@keyframes animation-nav{
    0%   {background: red;}
    25%  {background: yellow;}
    50%  {background: blue;}
    100% {background: rgb(9, 205, 231);}
}
@-webkit-keyframes animation-nav{
    0%   {background: red;}
    25%  {background: yellow;}
    50%  {background: blue;}
    100% {background: rgb(9, 205, 231);}
}

