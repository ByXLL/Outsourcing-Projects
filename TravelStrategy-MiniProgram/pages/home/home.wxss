/* 小视频 */
.video-list{
    display: flex;
    flex-wrap: wrap;
}
.video-item {
    width: calc(50% - 40rpx);
    padding: 10rpx 20rpx;
    margin-bottom: 20rpx;
}
.video-item .video {
    width: 100%;
    height: 458rpx;
    border-radius: 20rpx;  
}
