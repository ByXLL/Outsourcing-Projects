.user-head__box {
    position: relative;
    background: url("https://t1-q.mafengwo.net/s17/M00/CE/95/CoUBXl-CnF6ALLaFAAUMPHO-eVE38.jpeg") no-repeat;
    background-size: 100% 100%;
    box-sizing: border-box;
    padding: 30rpx;
}

.user-head {
    width: 96rpx;
    height: 96rpx;
    position: relative;
}

.user-head .user-head__avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: none;
}

.user-head_gender {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    right: 0;
    bottom: 0;
    background: none;
}

.user-name {
    font-size: 40rpx;
    font-weight: 700;
    color: #fff;
    margin-right: 16rpx;
}

.user-vertical {
    margin: 0 16rpx;
}

.user-font {
    margin: 10rpx 0 16rpx;
    color: #fff;
    font-size: 24rpx;
    line-height: 32rpx;
}

.user-tag {
    color: #fff;
}

.user-tag__bg {
    margin: 0 16rpx 16rpx 0;
    padding: 4rpx 16rpx;
    background: hsla(0,0%,100%,.3);
    border-radius: 16px;
    font-size: 22rpx;
}

.user-des {
    font-weight: 700;
    width: 496rpx;
    margin-bottom: 16rpx;
}

.user-des,.user-join {
    font-size: 28rpx;
    color: #fff;
}

.user-join {
    margin-bottom: 30rpx;
}

.user-name__footprint {
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}

.opreate-edit {
    width: 126rpx;
    height: 40rpx;
    box-sizing: border-box;
    border-radius: 43rpx;
    text-align: center;
    padding: 8rpx 0;
    line-height: 43rpx;
    font-size: 22rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.opreate-edit__wait {
    background: #ffdb26;
    color: #474747;
}

.opreate-edit__finish {
    background: hsla(0,0%,100%,.4);
    color: #474747;
}

.opreate-edit__icon {
    width: 18rpx;
    height: 18rpx;
    margin-right: 8rpx;
}

.opreate-follow__icon-wait {
    background: url("https://images.mafengwo.net/wxapp/images/mine/icon_add.png") no-repeat;
    background-size: 100%,100%;
}

.opreate-follow__icon-finish {
    background: url("https://images.mafengwo.net/wxapp/images/mine/img_follow.png") no-repeat;
    background-size: 100%,100%;
}

.opreate-share {
    width: 80rpx;
    height: 48rpx;
    background: hsla(0,0%,100%,.4);
    border-radius: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.opreate-share__icon {
    width: 24rpx;
    height: 30rpx;
    background: url("https://images.mafengwo.net/wxapp/images/mine/icon_share.png") no-repeat;
    background-size: 100%,100%;
}

.d-flex {
    display: flex;
    align-items: center;
}

.light {
    font-weight: lighter;
}

.multiline-ellipsis {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}


.content-nav {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-radius: 48rpx 48rpx 0 0;
    padding: 32rpx 36rpx 22rpx 38rpx;
    box-shadow: 0 -12px 24px 0 rgba(0,0,0,.07);
    /* height: 96rpx; */
    line-height: 96rpx;
    box-sizing: border-box;
    margin-top: -48rpx;
}

.content-nav::after {
    content: " ";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2rpx;
    background-color: #e2e7ef;
    transform: scaleY(.5);
}

.type {
    color: #242629;
    margin-bottom: 12rpx;
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.type.fixed {
    position: fixed;
    top: 68px;
    background: #fff;
    z-index: 888;
    width: calc(100% - 74rpx);
    padding: 0rpx 36rpx 0rpx 38rpx;
    left: 0;
    right: 0;
}

.iphoneX .type.fixed {
    top: 92px;
}

.type view {
    text-align: center;
    flex: 1;
    font-size: 32rpx;
    height: 96rpx;
    position: relative;
}

.type-all {
    margin-right: 62rpx;
}

.type view:last-child {
    margin-right: 0rpx;
}

.type .active {
    font-size: 32rpx;
    font-weight: bolder;
    position: absolute;
    bottom: 0rpx;
    left: 50%;
    display: inline-block;
    width: 114rpx;
    height: 6rpx;
    background: linear-gradient(135deg,#ffe24c,#ffdb26);
    border-radius: 200rpx 200rpx 0 0;
    transform: translateX(-50%);
}





.list{
    padding: 0 30rpx;
}

.item {
    padding: 20rpx 0rpx;
    position: relative;
}

.item::after {
    content: " ";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2rpx;
    background-color: #e2e7ef;
    transform: scaleY(.5);
}

.item .pic {
    width: 200rpx;
    height: 150rpx;
    margin-right: 15rpx;
    display: inline-block;
    border-radius: 12rpx;
}

.item .content {
    position: relative;
    display: inline-block;
    vertical-align: top;
}

.item .no_pic_width {
    width: 100%;
}

.item .pic_width {
    width: 67%;
}

.item .title {
    font-size: 32rpx;
    font-weight: 600;
    color: #22272e;
    line-height: 44rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.item .time {
    margin: 16rpx 0;
    color: #6f747b;
}

.item .like,.item .time {
    font-size: 24rpx;
}

.item .like {
    color: #242629;
}

.f-blod {
    font-weight: 700;
}

.list-time {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.note-title {
    margin-top: 64rpx;
}