<!--me/me.wxml-->
<view class="content">
    <!-- 1 个人信息 -->
    <view class="width100 bg">

        <!-- 1.1 头像 -->
        <view class="width85 d-row d-jc-between d-ai-centen margin-center">
            <view class="d-row d-ai-centen height100">
                <image class="head-img" src="/static/head.png"></image>
                <view class="padding-left-20"> 小馒头 </view>
            </view>
            <view class="d-row d-ai-end" style="height: 118rpx;" bindtap="homeClick">
                <span>个人主页</span>
                <i class="iconfont icon-youjiantou1" style="position: relative;top: 4rpx;"></i>
            </view>
        </view>

        <!-- 1.2 粉丝数 -->
        <view class="width85 d-row d-jc-between d-ai-centen margin-center padding-top-40 height100">
            <view class="width50 d-row d-jc-between">
                <view class="text-center"> <text>6 \n 关注 </text> </view>
                <view class="text-center"> <text>8 \n 粉丝 </text> </view>
                <view class="text-center"> <text>3 \n 收藏 </text> </view>
            </view>
            <view class="d-row d-jc-centen d-ai-end clock-in {{clockInTitle=='已打卡'?'ci-active':''}}" bindtap="clockInClick">
                <view>{{clockInTitle}}</view>
            </view>
        </view> 
    </view>

    <!-- 2 收藏 -->
    <view class="collection d-clo d-jc-centen d-ai-centen">
        <view class="d-row d-jc-around d-ai-centen font30" style="width:600rpx">
            <view class="text-center"> 
                <image class="coll-img" src="/static/shoucang.png"></image> 
                <text> \n 我的收藏 </text> 
            </view>
            <view class="text-center"> 
                <image class="coll-img" src="/static/dingdan.png"></image> 
                <text> \n 我的订单 </text> 
            </view>
            <view class="text-center"> 
                <image class="coll-img" src="/static/zuji.png"></image> 
                <text> \n 我的足迹 </text> 
            </view>
        </view>
    </view>

    <!-- 资料完善 -->
    <view class="collection" bindtap="infoClick">
        <view class="d-clo d-jc-around" style="padding:24rpx">
            <view class="font34"> 资料完善 </view>
            <view class="d-row d-jc-between d-ai-centen">
                <view class="font26">你的资料完善度只有 {{overInfo/allInfo*100}}% </view>
                <view>已完成 
                    <text style="position:relative;top:-8rpx;">{{overInfo}}</text>/{{allInfo}} 
                    <i class="iconfont icon-youjiantou1"></i> 
                </view>
            </view>
            <view class="padding-top-20">
                <progress percent="{{overInfo/allInfo*100}}" border-radius="5" color="#FFDD3E" active 
                        active-mode="forwards" stroke-width="10" duration="6" />
            </view>
        </view>
    </view>

    <!-- 各种图标 -->
    <view class="collection" style="height:370rpx !important;">   
        <view class="d-row d-jc-between margin-center" style="padding:24rpx;width:580rpx;flex-wrap:wrap;">
            <view class="details"> 
                <i class="iconfont icon-biji1"></i> 
                <text>\n内容管理<text class="font24 gray2">\n途中故事</text>
                </text>
            </view>
            <view class="details"> 
                <i class="iconfont icon-fapiao2"></i>
                <text>\n有奖反馈<text class="font24 gray2">\n满意调研</text>
                </text>
            </view>
            <view class="details"> 
                <i class="iconfont icon-biji2"></i> 
                <text>\n常用信息<text class="font24 gray2">\n实名认证</text>
                </text>
            </view>
            <view class="details"> 
                <i class="iconfont icon-fapiao1"></i>
                <text>\n开具发票<text class="font24 gray2">\n历史发票</text>
                </text>
            </view>
            <view class="details"> 
                <i class="iconfont icon-kefu2"></i>
                <text>\n在线客服<text class="font24 gray2">\n24小时服务</text>
                </text>
            </view>
            <view class="details"> 
                <i class="iconfont icon-kabao1"></i>
                <text>\n卡包<text class="font24 gray2">\n会员卡</text>
                </text>
            </view>
        </view>
    </view>

    <!-- 分享 -->
    <view bindtap="cameraClick" class="collection text-center font36" style="height:120rpx !important;line-height:120rpx;">   
        <i class="iconfont icon-paizhao2" style="font-size:52rpx;position:relative;top:5rpx;padding-right:20rpx;"></i>    
        分享你的旅行照片
    </view>

    <!-- 分享的图片 -->
    


</view>




